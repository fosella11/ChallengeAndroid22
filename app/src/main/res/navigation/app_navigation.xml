<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.caxstudio.challengeandroid.ui.characters.CharactersFragment"
        android:label="CharacterFragment">
        <action
            android:id="@+id/action_characterFragment_to_characterDetails"
            app:destination="@id/characterDetails"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/characterDetails"
        android:name="com.caxstudio.challengeandroid."
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details">
        <argument
            android:name="resultInfo"
            app:argType="com.caxstudio.challengeandroid.data.model.character.Result" />
    </fragment>

</navigation>